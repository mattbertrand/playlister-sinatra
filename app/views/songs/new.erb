<h1>Add a New Song</h1>

<form action="/songs" method="POST">
    <label for="artist_name">Artist Name</label>
    <input type="text" name=artist[name] id="artist_name"><br>

    <label for="song_name">Name</label>
    <input type="text" name="song[name]" id="song_name"><br>

    <label for="genre_name"> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>

    <input type="submit" value="Create">
</form>